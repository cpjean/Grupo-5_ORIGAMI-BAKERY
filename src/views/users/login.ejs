<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head') %> 
    <link href="/css/login.css" rel="stylesheet">
    <link href="/css/Validaciones.css" rel="stylesheet">
    <title>Inicia Sesion</title>
</head>
<body>

    <%- include ('../partials/header') %> 

    <section class="container forms">
        <div class="form login">
            <div class="form-content">
                <header class="reg">Iniciar Sesion</header>
                <form action="/user/login" method="POST">

                    <div>
                        <ul id="errores"> </ul>
                    </div>

                    <div class="campo input-campo">
                        <input type="email" placeholder="Email" class="input" name="email" required>
                        <% if (locals.errors && errors.email) {%>
                            <div class="text-danger">
                                <%= errors.email.msg %> 
                            </div>
                        <% } %> 
                        <span></span>
                    </div>

                    <div class="campo input-campo">
                        <input type="password" placeholder="Contraseña" class="input" name="password" required>
                        <!-- <i class="fa-regular fa-eye-slash"></i> -->
                        <span></span>
                    </div>
                    
                    <div class="form-link">
                            <a href="#" class="forgot-pass">Olvidaste tu Contraseña?</a>
                    </div>

                    <div class="campo input-campo">
                        <button type="submit">Login</button>
                    </div>
                
                    
                </form>
                <div class="form-link">
                   <span>No tenes una cuenta? <a href="/user/registro" class="signup-link">Registrate</a></span>
                </div>
            </div>
            
<div class="line"></div>

<div class="media-options">
    <a href="#" class="campo facebook">
        <i class="fa-brands fa-facebook-f facebook-icon"></i>
        <span>Inicia sesion con Facebook</span>
    </a>
</div> 

<div class="media-options">
    <a href="#" class="campo google">
        <i class="fa-brands fa-google google-icon"></i>
        <span>Inicia sesion con Google</span>
    </a>
</div> 
        </div>
    </section>

<script src="/js/login.js"></script>

</body>
</html>